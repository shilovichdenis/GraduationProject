@model IEnumerable<CourseProject.Models.Discipline>
@{
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    ViewBag.Title = "Дисциплины";
}
@Styles.Render("~/Student/View")
<div class="panel" id="view-form-discipline">
    <div class="panel-heading">
        Дисциплины
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Название</th>
                    <th>Преподаватель</th>
                    <th>Группа</th>
                    <th>Расположение</th>
                    <th>Дата</th>
                    <th>Кол-во часов</th>
                    <th>Тип</th>
                    <th>Статус</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() != 0)
                {
                    foreach (var (index, discipline) in Model.Select((v, i) => (i, v)))
                    {
                        <tr>
                            <td>@(index + 1)</td>
                            <td>@discipline.Name</td>
                            <td>
                                @Html.ActionLink(discipline.Teacher.User.DisplayName, "InfoAboutUser", "Account", new { id = discipline.Teacher.User.Id }, new { @class = "teacher-link" })
                            </td>
                            <td>@discipline.Group.Name</td>
                            <td>к. @discipline.Building, ауд. @discipline.Audience</td>
                            <td>@discipline.DateTime.ToShortDateString()</td>
                            <td>@discipline.СountHours</td>
                            <td>@discipline.Type</td>
                            <td>@discipline.Status</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9">Нет ни одной назначенной дисциплины</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

