@model IEnumerable<CourseProject.Models.Teacher>
@{
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    ViewBag.Title = "Преподаватели";
}
@Styles.Render("~/Student/View")
<div class="panel" id="view-form-teacher">
    <div class="panel-heading">Преподаватели</div>
    <div class="panel-body">
        <table class="text-center table-bordered table table-striped">
            <thead>
                <tr>
                    <th>№</th>
                    <th>ФИО</th>
                    <th>Почта</th>
                    <th>Кафедра</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() != 0)
                {
                    foreach (var (index, teacher) in Model.Select((v, i) => (i, v)))
                    {
                        <tr>
                            <td>@(index + 1)</td>
                            <td>
                                @Html.ActionLink(teacher.User.DisplayName, "InfoAboutUser", "Account", new { id = teacher.User.Id }, new { @class = "teacher-link" })
                            </td>
                            <td>@teacher.User.Email</td>
                            <td>@teacher.Cathedra.Name</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">Нет ни одного преподавателя</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
