<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="margin-bottom: 20px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Домашняя страница", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "font-size: 16px;" })
                <div class="dropdown navbar-brand">
                    <button class="drop-btn">Управление</button>
                    <div class="dropdown-content">
                        @Html.ActionLink("Пользователи", "ViewUsers", "Admin", null, new { @class = "" })
                        @Html.ActionLink("Преподаватели", "ViewTeachers", "Admin", null, new { @class = "" })
                        @Html.ActionLink("Студенты", "ViewStudents", "Admin", null, new { @class = "" })
                        @Html.ActionLink("Кафедры", "ViewCathedras", "Admin", null, new { @class = "" })
                        @Html.ActionLink("Группы", "ViewGroups", "Admin", null, new { @class = "" })
                        @Html.ActionLink("Дисциплины", "ViewDisciplines", "Admin", null, new { @class = "" })
                        @Html.ActionLink("Роли", "ViewRoles", "Admin", null, new { @class = "" })
                        @Html.ActionLink("Информация", "ViewInformation", "Admin", null, new { @class = "" })
                    </div>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
