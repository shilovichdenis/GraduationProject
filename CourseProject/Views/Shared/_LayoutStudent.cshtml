<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="margin-bottom: 20px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Домашняя страница", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "font-size: 16px;" })
                <div class="dropdown navbar-brand">
                    <button class="drop-btn">Управление</button>
                    <div class="dropdown-content">
                        @Html.ActionLink("Личный кабинет", "Profile", "Student", null, new { @class = "" })
                        @Html.ActionLink("Группа", "InfoAboutGroup", "Student", null, new { @class = "" })
                        @Html.ActionLink("Преподаватели", "ViewTeachers", "Student", null, new { @class = "" })
                        @Html.ActionLink("Дисциплины", "ViewDisciplines", "Student", null, new { @class = "" })
                    </div>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Student/Script")
    @RenderSection("scripts", required: false)
</body>
</html>
