@model IEnumerable<CourseProject.Models.ApplicationUser>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Подтверждение пользователей";
}
@Styles.Render("~/Admin/View")
<div class="panel">
    <div class="panel-heading">
        Пользователи
    </div>
    <div class="panel-body">

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>ФИО</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() != 0)
                    {
                        foreach (var (index, user) in Model.Select((v, i) => (i, v)))
                        {
                            <tr>
                                <td>@(index + 1)</td>
                                <td>@user.DisplayName</td>
                                <td>@user.Email</td>
                                <td class="last-td-btn">
                                    @using (Html.BeginForm("ConfirmUser", "Admin", new { id = user.Id }))
                                    {
                                        <button class="btn btn-default btn-xs" type="submit"></button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Нет неподтвержденных пользователей</td>
                        </tr>
                    }
                </tbody>
            </table>
    </div>
</div>
