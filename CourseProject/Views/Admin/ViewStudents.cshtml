    <div>
        <div class="panel-heading">Студенты</div>
        <div class="panel-body" id="sortByRole">
            <table class="text-center table-bordered table table-striped ">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>ФИО</th>
                        <th>Почта</th>
                        <th>Группа</th>
                        <th class="last-th"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() != 0)
                    {
                        foreach (var (index, student) in Model.Select((v, i) => (i, v)))
                        {
                            <tr>
                                <td>@(index + 1)</td>
                                <td>@student.User.DisplayName</td>
                                <td>@student.User.Email</td>
                                <td>@student.Group.Name</td>
                                <td class="last-td">
                                    @Html.ActionLink(" ", "InfoAboutStudent", "Home", new { id = student.User.Id }, new { @class = "btn icon-info btn-icon info-item" })
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">Нет ни одного пользователя</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
