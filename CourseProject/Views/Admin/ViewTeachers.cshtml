    <div id="info-form" class="modal fade">
        <div id="info-dialog" class="modal-dialog"></div>
    </div>
    <div class="panel-heading">Преподаватели</div>
    <div class="panel-body" id="sortByRole">
        <table class="text-center table-bordered table table-striped">
            <thead>
                <tr>
                    <th>№</th>
                    <th>ФИО</th>
                    <th>Почта</th>
                    <th>Кафедра</th>
                    <th class="last-th"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() != 0)
                {
                    foreach (var (index, teacher) in Model.Select((v, i) => (i, v)))
                    {
                        <tr>
                            <td>@(index + 1)</td>
                            <td>@teacher.User.DisplayName</td>
                            <td>@teacher.User.Email</td>
                            <td>@teacher.Cathedra.Name</td>
                            <td class="last-td">
                                @Html.ActionLink(" ", "InfoAboutTeacher", "Home", new { id = teacher.Id }, new { @class = "btn icon-info btn-icon info-item" })
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">Нет ни одного пользователя</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
