@model CourseProject.Models.Teachers.Teacher
@{
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    ViewBag.Title = "Личный кабинет";
}
@Styles.Render("~/Teacher/View")
<div class="panel" id="info-form-teacher">
    <div class="panel-heading">
       Профиль
    </div>
    <div class="panel-body panel-info">
        <div id="create-form" class="modal fade">
            <div id="create-dialog" class="modal-dialog"></div>
        </div>
        <div class="left-div">
            <div class="photo-block">
                <div class="photo">
                    <img src="@Url.Content(Model.User.ImagePath)" alt="" class="image" />

                </div>
                @using (Html.BeginForm("EditPhoto", "Manage", FormMethod.Post, new { enctype = "multipart/form-data", id = "upload-photo-form" }))
                {
                    <div class="editphoto">
                        <input type="file" name="ImageFile" required class="form-control custom-file-input" id="file" hidden />
                        <label class="btn btn-default label-for-file" for="file">Загрузите фотографию</label>
                        <input type="submit" hidden />
                    </div>
                }
            </div>
            <div class="sections">
                <span>
                    <input checked class="radio-in-section" type="radio" name="sections" id="radio-personaldata" />
                    <label class="btn btn-default label-in-section" for="radio-personaldata">Личная информация</label>
                </span>
                <span>
                    <input class="radio-in-section" type="radio" name="sections" id="radio-educationalmaterials" />
                    <label class="btn btn-default label-in-section" for="radio-educationalmaterials">Учебные материалы</label>
                </span>
                <span>
                    <input class="radio-in-section" type="radio" name="sections" id="radio-scientificwork" />
                    <label class="btn btn-default label-in-section" for="radio-scientificwork">Научные работы</label>
                </span>
                <span>
                    <input class="radio-in-section" type="radio" name="sections" id="radio-publications" />
                    <label class="btn btn-default label-in-section" for="radio-publications">Публикации</label>
                </span>
            </div>
        </div>
        <div class="right-div">
            <div id="personaldata" class="personaldata">
                <div class="panel-heading" id="personaldata-heading">Личные данные</div>
                <div id="personaldata-main">
                    <div class="block">
                        <div class="block-name panel-heading">Основное</div>
                        <div class="block-info">
                            <div class="form-group">
                                @Html.LabelFor(model => model.User.Surname, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.Surname)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.User.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.Name)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.User.Patronymic, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.Patronymic)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="block">
                        <div class="block-name panel-heading">Прочее</div>
                        <div class="block-info">
                            <div class="form-group">
                                @Html.LabelFor(model => model.User.Gender, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.Gender)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.User.Role, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">Преподаватель</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="block">
                        <div class="block-name panel-heading">Контакты</div>
                        <div class="block-info">
                            <div class="form-group">
                                @Html.LabelFor(model => model.User.Email, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.Email)</span>
                                </div>
                            </div>                    <div class="form-group">
                                @Html.LabelFor(model => model.User.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.PhoneNumber)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="block">
                        <div class="block-name panel-heading">Обучение</div>
                        <div class="block-info">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Cathedra.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.Cathedra.Name)</span>
                                </div>
                            </div>                    <div class="form-group">
                                @Html.LabelFor(model => model.AcademicTitle, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.AcademicTitle)</span>
                                </div>
                            </div>                    <div class="form-group">
                                @Html.LabelFor(model => model.AcademicDegree, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.AcademicDegree)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="educationalmaterials" class="educationalmaterials">
                <div class="panel-heading header-icon-box" id="educationalmaterials-heading">Учебные материалы</div>
            </div>
            <div id="scientificwork" class="scientificwork">
                <div class="panel-heading header-icon-box" id="scientificwork-heading">
                    Научные работы
                    @Html.ActionLink(" ", "AddScientificWork", "Teacher", null, new { @class = "btn icon-plus btn-icon create-item" })
                </div>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td>№</td>
                            <td>Название</td>
                            <td>Годы</td>
                            <td>О работе</td>
                            <td class="last-th"></td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ScientificWorks.Count() != 0)
                        {
                            foreach (var (index, work) in Model.ScientificWorks.Select((v, i) => (i, v)))
                            {
                                <tr>
                                    <td>@(index + 1)</td>
                                    <td>@work.Name</td>
                                    <td>@work.Years</td>
                                    <td>@work.About</td>
                                    <td class="last-td">
                                        @Html.ActionLink(" ", "EditScientificWork", "Teacher", new { id = work.Id }, new { @class = "btn icon-pencil btn-icon edit-item" })
                                        @using (Html.BeginForm("DeleteScientificWork", "Teacher", new { id = work.Id }))
                                        {
                                            <button class="btn btn-icon icon-remove" type="submit"></button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">
                                    Нет научных работ
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="publications" id="publications">
                <div class="panel-heading publications-heading header-icon-box">
                    Публикации
                    @Html.ActionLink(" ", "AddPublication", "Teacher", null, new { @class = "btn icon-plus btn-icon create-item" })
                </div>
                <div class="" id="publications-body">
                    @if (Model.Publications.Count() != 0)
                    {
                        <ul>
                            @foreach (var publication in Model.Publications)
                            {
                                <li>@publication.Name</li>
                            }
                        </ul>

                    }
                    else
                    {
                        <p class="text-center">Нет публикаций</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $("#file").change(function (e) {
            $("#upload-photo-form").submit();
        })
    </script>
}