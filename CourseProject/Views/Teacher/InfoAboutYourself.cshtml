@model CourseProject.Models.Teachers.Teacher
@{
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    ViewBag.Title = "Личный кабинет";
}
@Styles.Render("~/Teacher/View")
<div class="panel" id="info-form-teacher">
    <div class="panel-heading">
        Имя пользователя - @Model.User.UserName
    </div>
    <div class="panel-body panel-info">
        <div class="left-div">
            <div class="photo"></div>
            <div class="sections">
                <span>
                    <input checked class="radio-in-section" type="radio" name="sections" id="radio-personaldata" />
                    <label class="btn btn-default label-in-section" for="radio-personaldata">Личная информация</label>
                </span>
                <span>
                    <input class="radio-in-section" type="radio" name="sections" id="radio-educationalmaterials" />
                    <label class="btn btn-default label-in-section" for="radio-exams">Учебные материалы</label>
                </span>
                <span>
                    <input class="radio-in-section" type="radio" name="sections" id="radio-scientificwork" />
                    <label class="btn btn-default label-in-section" for="radio-tests">Научные работы</label>
                </span>
            </div>
        </div>
        <div class="right-div">
            <div id="personaldata" class="personaldata">
                <div class="panel-heading" id="personaldata-heading">Личные данные</div>
                <div id="personaldata-main">
                    <div class="block">
                        <div class="block-name panel-heading">Основное</div>
                        <div class="block-info">
                            <div class="form-group">
                                @Html.LabelFor(model => model.User.Surname, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.Surname)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.User.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.Name)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.User.Patronymic, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.Patronymic)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="block">
                        <div class="block-name panel-heading">Прочее</div>
                        <div class="block-info">
                            <div class="form-group">
                                @Html.LabelFor(model => model.User.Gender, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.Gender)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.User.Role, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.Role)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="block">
                        <div class="block-name panel-heading">Контакты</div>
                        <div class="block-info">
                            <div class="form-group">
                                @Html.LabelFor(model => model.User.Email, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.Email)</span>
                                </div>
                            </div>                    <div class="form-group">
                                @Html.LabelFor(model => model.User.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.User.PhoneNumber)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="block">
                        <div class="block-name panel-heading">Обучение</div>
                        <div class="block-info">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Cathedra.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.Cathedra.Name)</span>
                                </div>
                            </div>                    <div class="form-group">
                                @Html.LabelFor(model => model.AcademicTitle, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.AcademicTitle)</span>
                                </div>
                            </div>                    <div class="form-group">
                                @Html.LabelFor(model => model.AcademicDegree, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <span class="">@Html.DisplayFor(model => model.AcademicDegree)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="exams" class="exams">
                <div class="panel-heading info-heading">Экзамены</div>

            </div>
        </div>
    </div>
</div>
