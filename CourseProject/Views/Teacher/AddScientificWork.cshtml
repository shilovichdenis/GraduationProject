@model CourseProject.Models.Teachers.ScientificWork
@Styles.Render("~/Teacher/Manage")
<div class="modal-content" id="create-form-scientificwork">
    <div class="panel-heading header-icon-box">
        Добавить научную работу
        <a href="#" data-dismiss="modal">&times;</a>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("AddScientificWork", "Teacher", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Years, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Years, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Years, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Teacher, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    <input type="text" name="TeacherId" value="@ViewBag.Teacher.Id" class="hidden" />
                    <input type="text" disabled value="@ViewBag.Teacher.User.DisplayName" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Teacher.User.Surname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.About, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.About, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.About, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9 btn-box">
                    <input type="submit" value="Создать" class="btn btn-default" />
                    <input type="button" value="Отмена" class="btn btn-default" data-dismiss="modal" />
                </div>
            </div>
        }
    </div>
</div>


